<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nathan.studenthub">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presenter.NavDrawer"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presenter.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presenter.HomeFeed"
            android:label="@string/title_activity_home_feed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presenter.AdvertListing"
            android:label="@string/title_activity_advert_listing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presenter.SpecificAdvertDetails"
            android:label="@string/title_activity_specific_advert_details"
            android:parentActivityName=".presenter.AdvertListing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presenter.CreateAdvert"
            android:label="@string/title_activity_create_advert"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presenter.UniversityServices"
            android:label="@string/title_activity_university_services"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presenter.ContentActivity"
            android:label="@string/title_activity_content"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presenter.WebViewer"
            android:label="@string/title_web_viewer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presenter.MentalHealthResources"
            android:label="@string/title_activity_mental_health_resources"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>